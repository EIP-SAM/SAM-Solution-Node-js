{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "max-len": 0,
        "no-eval" : "error",
        "no-const-assign": "error",
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-this-before-super": "warn",
        "no-undef": "error",
        "no-unreachable": "warn",
        "no-unused-vars": "error",
        "constructor-super": "warn",
        "valid-typeof": "warn"
    }
}
